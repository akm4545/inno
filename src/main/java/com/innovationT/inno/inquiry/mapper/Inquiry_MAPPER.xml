		 INSERT INTO INQUIRY 
			VALUES ( default
			  , #{inquiryVO.inquiryPageNumber}
			  , #{inquiryVO.inquiryPay}
			  , #{inquiryVO.inquiryContent}
			  , default
			  , #{inquiryVO.inquiryCheck} );
