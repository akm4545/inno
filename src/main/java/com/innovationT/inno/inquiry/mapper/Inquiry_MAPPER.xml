			  우선 dataSource 에 있는 url 프로퍼티에  <property name="url" value="jdbc:mysql://127.0.0.1:3306/TestDB?allowMultiQueries=true" /> allowMultiQueries 파라미터를 추가해준다.
	</insert> -->
	
	<insert id="insertInquiryList">
		<choose>
			<when test="@java.util.List@contains(inquiryFileVO)">
				INSERT INTO INQUIRYFILE 
				VALUES 
				<foreach item="item" collection="list" separator=",">
					( default
					, #{item.inquiryIdx}
					, #{item.inquiryFileName}
					, #{item.inquiryFileOrigin}
					, #{item.inquiryFileDir} )
				</foreach>
			</when>
			<when test="@java.util.List@contains(inquirySiteVO)">
				INSERT INTO INQUIRYSITE 
				VALUES 
				<foreach item="item" collection="list" separator=",">
					( default
					, #{item.inquiryIdx}
					, #{item.inquirySiteSite}
					, #{item.inquirySiteType} )
				</foreach>
			</when>
			<when test="@java.util.List@contains(inquiryTypeLinkVO)">
				INSERT INTO INQUIRYTYPELINK 
				VALUES 
				<foreach item="item" collection="list" separator=",">
					( #{item.inquiryIdx}
					, #{item.inquiryTypeIdx} )
				</foreach>
			</when>
		</choose>
	</insert>
	
	<update id="update**">
		<![CDATA[
			UPDATE **
			SET test=#{test}
				, tes2=#{tes2}
			]]>
			<!-- WHERE절 -->
	</update>
	
	<delete id="delete**">
		<![CDATA[
			DELETE FROM ** 
			]]>
			<!-- WHERE절 -->
	</delete>
	
	<select id="select**" resultMap="**">
		<![CDATA[
			SELECT
				test
				, tes2
			FROM **
			]]>
			<!-- WHERE절 -->
	</select>
	
	<select id="select**List" parameterType="**" resultType="**">
			SELECT
								test
								, tes2
					FROM **
			WHERE 1=1 <!-- 혹은 기준 고정 -->
			<if test="searchKeyword != null and searchKeyword != ''">
				<if test="searchCondition == 0">AND
					test = #{searchKeyword}
				</if>
				<if test="searchCondition == 1">AND
					tes2 LIKE CONCAT('%',#{searchKeyword},'%')
				</if>
			</if>
				ORDER BY <!-- 정렬기준  -->
				limit #{recordCountPerPage} offset #{firstIndex}	
	</select>	
	<select id="select**ListTotCnt" parameterType="**" resultType="int">
			SELECT COUNT(*) totcnt
			FROM **
			WHERE 1=1 <!-- 혹은 기준 고정 -->
			<if test="searchKeyword != null and searchKeyword != ''">
				<if test="searchCondition == 0">AND
					test = #{searchKeyword}
				</if>
				<if test="searchCondition == 1">AND
					tes2 LIKE CONCAT('%',#{searchKeyword},'%')
				</if>
			</if>			
	</select>

</mapper>
