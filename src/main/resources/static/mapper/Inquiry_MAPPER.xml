	<delete id="deleteInquiry">
			DELETE FROM INQUIRY
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</delete>
	
	<delete id="deleteInquiryList">
		DELETE FROM 
		<choose>
			<when test="@java.util.List@contains(inquiryFileVO)">
				INQUIRYFILE 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
			<when test="@java.util.List@contains(inquiryTypeLinkVO)">
				INQUIRYTYPELINK 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
			<when test="@java.util.List@contains(inquirySiteVO)">
				INQUIRYSITE 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
		</choose>
	</delete>
	
	<select id="selectInquiry" resultMap="inquiryVO">
			SELECT *
			FROM INQUIRY 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectInquiryUserInfo" resultMap="inquiryUserInfoVO">
			SELECT *
			FROM INQUIRYUSERINFO 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectInquiryReservation" resultMap="inquiryReservationVO">
			SELECT *
			FROM INQUIRYRESERVATION 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectInquiryFileList" resultMap="inquiryFileList">
			SELECT * 
			FROM INQUIRYFILE 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectInquiryTypeLinkList" resultMap="inquiryTypeLinkList">
			SELECT * 
			FROM INQUIRYTYPELINK 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectInquirySiteList" resultMap="inquirySiteList">
			SELECT * 
			FROM INQUIRYSITE 
			WHERE INQUIRY_IDX = #{inquiryIdx}
	</select>
	
	<select id="selectIdxList" resultType="list">
		<choose>
			<when test="@java.util.List@contains(inquiryFileVO)">
				SELECT INQUIRYFILE_IDX 
				FROM INQUIRYFILE 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
		</choose>
		<choose>
			<when test="@java.util.List@contains(inquiryTypeLinkVO)">
				SELECT INQUIRYTYPE_IDX 
				FROM INQUIRYTYPELINK 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
		</choose>
		<choose>
			<when test="@java.util.List@contains(inquirySiteVO)">
				SELECT INQUIRYSITE_IDX 
				FROM INQUIRYSITE 
				WHERE INQUIRY_IDX = #{inquiryIdx}
			</when>
		</choose>
	</select>
	
	<select id="selectBoardList" resultType="inquiryBoardList">
			SELECT 
				INQUIRY.INQUIRY_IDX,
				INQUIRY.INQUIRY_CONTENT,
				INQUIRY.INQUIRY_DATE,
				INQUIRY.INQUIRY_CHECK,
				INQUIRYUSERINFO.INQUIRYUSERINFO_NAME,
				INQUIRYUSERINFO.INQUIRYUSERINFO_COMPANY,
				INQUIRYRESERVATION.INQUIRYRESERVATION_TYPE 
			FROM INQUIRY 
				INNER JOIN INQUIRYUSERINFO 
					ON INQUIRY.INQUIRY_IDX = INQUIRYUSERINFO.INQUIRY_IDX 
				INNER JOIN INQUIRYRESERVATION 
					ON INQUIRY.INQUIRY_IDX = INQUIRYRESERVATION.INQUIRY_IDX 
			<!-- WHERE 1=1 혹은 기준 고정
			<if test="searchKeyword != null and searchKeyword != ''">
				<if test="searchCondition == 0">AND
					test = #{searchKeyword}
				</if>
				<if test="searchCondition == 1">AND
					tes2 LIKE CONCAT('%',#{searchKeyword},'%')
				</if>
			</if> -->
			ORDER BY INQUIRY_IDX DESC 
			limit #{recordCountPerPage} offset #{firstIndex}
	</select>
	
	<select id="selectInquiryIdxList" resultType="list">
		<choose>
			<when test="@java.util.List@contains(inquiryFileVO)">
				SELECT INQUIRYFILE_IDX 
				FROM INQUIRYFILE
			</when>
			<when test="@java.util.List@contains(inquirySiteVO)">
				SELECT INQUIRYSITE_IDX 
				FROM INQUIRYSITE
			</when>
			<when test="@java.util.List@contains(inquiryTypeLinkVO)">
				SELECT INQUIRYTYPELINK_IDX 
				FROM INQUIRYTYPELINK
			</when>
		</choose>
	</select>
	
	<select id="selectInquiryListTotCnt" resultType="int">
			SELECT COUNT(*) totcnt 
			FROM INQUIRY
	</select>

</mapper>
